<Page
    x:Class="HonkPooper.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HonkPooper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{ThemeResource RoadBackgroundColor}"
            BorderBrush="#111111"
            BorderThickness="3">
            <Scene x:Name="MainScene" Background="Transparent" />
        </Border>
        <Border
            x:Name="InputView"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            PointerMoved="InputView_PointerMoved"
            PointerPressed="InputView_PointerPressed" />
    </Grid>

</Page>
