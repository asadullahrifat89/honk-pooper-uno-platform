<Page
    x:Class="HonkPooper.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HonkPooper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Border
            Background="{ThemeResource RoadBackgroundColor}"
            BorderBrush="#111111"
            BorderThickness="3">
            <Scene x:Name="MainScene" Background="Transparent" />
        </Border>
        <Controller
            x:Name="KeyboardController"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent" />
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <HealthBar
                x:Name="BossHealthBar"
                Margin="30,30,5,30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top" />
            <HealthBar
                x:Name="PlayerHealthBar"
                Margin="5,30,30,30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top" />

        </StackPanel>
    </Grid>

</Page>
