<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <!--
			Add resource dictionaries.

			For example:
			<ResourceDictionary Source="Styles/MyButtonStyles.xaml" />
		-->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
    </ResourceDictionary.MergedDictionaries>

    <!--  Add resources here  -->
    <SolidColorBrush x:Key="RoadBackgroundColor" Color="#5e6b73" />
    <!--<SolidColorBrush x:Key="RoadBackgroundColor" Color="#191919" />-->

    <SolidColorBrush x:Key="RoadSideWalkColor" Color="#958077" />
    <SolidColorBrush x:Key="RoadSideWalkBorderColor" Color="#f6f1eb" />
    <SolidColorBrush x:Key="RoadSideWalkSlopeColor" Color="#c3bfba" />

    <SolidColorBrush x:Key="BorderColor" Color="#2f3a5a" />

    <SolidColorBrush x:Key="Player1AccentColor" Color="#5fc4f8" />
    <SolidColorBrush x:Key="Player2AccentColor" Color="#d75e72" />

    <!--<FontFamily x:Key="DefaultFontFamily">ms-appx:///HonkTrooper/Assets/Fonts/CuteyPatchy.ttf#CuteyPatchy</FontFamily>-->
    <FontFamily x:Key="DefaultFontFamily">ms-appx:///HonkTrooper/Assets/Fonts/Gameplay.ttf#Gameplay</FontFamily>

    <Style BasedOn="{StaticResource DefaultTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
    </Style>

</ResourceDictionary>
