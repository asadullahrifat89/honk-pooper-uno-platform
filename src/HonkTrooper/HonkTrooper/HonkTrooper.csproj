    <None Remove="Assets\Images\player_1_idle.png" />
    <None Remove="Assets\Images\player_bomb_seeking_2.png" />
    <None Remove="Assets\Images\power_up_pickup.png" />
    <None Remove="Assets\Images\tree_E.png" />
